            </div>
        </div>

        <!-- Resistant to -->
        <div class="matchup-row" style="display:grid;grid-template-columns:9rem 1fr;align-items:start;gap:.75rem;margin:.35rem 0%;">
            <div class="matchup-label" style="font-weight:700;color:#334155;">Resistant to</div>
            <div class="matchup-badges" style="display:flex;flex-wrap:wrap;gap:.4rem;">
                @if (resistances.Count == 0)
                {
                    <span class="none" style="color:#64748b;">—</span>
                }
                else
                {
                    foreach (var kv in resistances)
                    {
                        var t = kv.Key; var m = kv.Value;
                        var lower = (t ?? "").ToLowerInvariant();
                        var href = Url.Action("Details", "Types", new { name = t, returnUrl = detailsReturnUrl });
                        <a href="@href"
                           class="pokemon-type type-@lower type-chip"
                           role="button"
                           title="View @Cap(t) type details">
                            @Cap(t)<small style="font-weight:700;margin-left:.25rem;opacity:.9;"> @MultLabel(m)</small>
                        </a>
                    }
                }
            </div>
        </div>

        <!-- Immune to -->
        <div class="matchup-row" style="display:grid;grid-template-columns:9rem 1fr;align-items:start;gap:.75rem;margin:.35rem 0%;">
            <div class="matchup-label" style="font-weight:700;color:#334155;">Immune to</div>
            <div class="matchup-badges" style="display:flex;flex-wrap:wrap;gap:.4rem;">
                @if (immunities.Count == 0)
                {
                    <span class="none" style="color:#64748b;">—</span>
                }
                else
                {
                    foreach (var t in immunities)
                    {
                        var lower = (t ?? "").ToLowerInvariant();
                        var href = Url.Action("Details", "Types", new { name = t, returnUrl = detailsReturnUrl });
                        <a href="@href"
                           class="pokemon-type type-@lower type-chip"
                           role="button"
                           title="View @Cap(t) type details">
                            @Cap(t)<small style="font-weight:700;margin-left:.25rem;opacity:.9;"> ×0</small>
                        </a>
                    }
                }
            </div>
        </div>
    </section>

    @* ===== MOVES & LEARN LEVELS — TABBED BY GAME, WITH TYPE CHIP ===== *@
    @{
        string Pretty(string s) => string.IsNullOrWhiteSpace(s) ? "—" : s.Replace("-", " ");

        // Prefer true title-casing and fix common concatenated game names.
        string PrettyGame(string g)
        {
            if (string.IsNullOrWhiteSpace(g)) return "—";
            var x = g.Replace('-', ' ').Replace('_', ' ').Trim();

            // Fix common concatenations (HGSS/FRLG).
            x = x.Replace("heartgold", "Heart Gold", System.StringComparison.OrdinalIgnoreCase)
            .Replace("soulsilver", "Soul Silver", System.StringComparison.OrdinalIgnoreCase)
            .Replace("firered", "Fire Red", System.StringComparison.OrdinalIgnoreCase)
            .Replace("leafgreen", "Leaf Green", System.StringComparison.OrdinalIgnoreCase);

            // Title-case remaining tokens
            var parts = x.Split(' ', System.StringSplitOptions.RemoveEmptyEntries)
            .Select(p => char.ToUpperInvariant(p[0]) + (p.Length > 1 ? p.Substring(1).ToLowerInvariant() : ""));
            return string.Join(' ', parts);
        }

        var hasMoves = (Model.Moves?.Count ?? 0) > 0;
        var groups = hasMoves
        ? Model.Moves
        .Select(m => m.VersionGroup ?? "")
        .Where(v => !string.IsNullOrWhiteSpace(v))
        .Distinct(StringComparer.OrdinalIgnoreCase)
        .OrderBy(v => v) // alphabetical; adjust if you want a custom chronology
        .ToList()
        : new List<string>();

        Func<string, string> GroupId = g => "vg-" + (g ?? "").ToLowerInvariant().Replace(' ', '-');
    }

    <section style="margin-top:24px;">
        <h2 style="margin:0 0 12px 0;">Moves &amp; Learn Levels</h2>

        @if (!hasMoves)
        {
            <div><em>No move data available.</em></div>
        }
        else
        {
            <div role="tablist" aria-label="Game" class="vg-tabs" style="display:flex;gap:8px;flex-wrap:wrap;margin:0 0 10px 0;">
                @for (int i = 0; i < groups.Count; i++)
                {
                    var g = groups[i];
                    var id = GroupId(g);
                    var selected = i == 0 ? "true" : "false";
                    var activeClass = i == 0 ? "vg-tab--active" : "";
                    <button role="tab"
                            aria-selected="@selected"
                            aria-controls="@id"
                            id="@($"{id}-tab")"
                            class="vg-tab @activeClass"
                            data-target="#@id"
                            style="border:1px solid #d1d5db;padding:6px 10px;border-radius:999px;background:#f8fafc;cursor:pointer;text-transform:capitalize;">
                        @PrettyGame(g)
                    </button>
                }
            </div>

            @for (int i = 0; i < groups.Count; i++)
            {
                var g = groups[i];
                var id = GroupId(g);
                var hidden = i == 0 ? "" : "hidden";
                <div role="tabpanel"
                     id="@id"
                     aria-labelledby="@($"{id}-tab")"
                     class="vg-pane"
                     @hidden
                     style="margin-top:6px;">
                    <div style="overflow:auto;border:1px solid #e5e7eb;border-radius:10px;">
                        <table style="width:100%;border-collapse:collapse;font-size:0.95rem;min-width:780px;">
                            <thead style="background:#f8fafc;">
                                <tr>
                                    <th style="text-align:left;padding:10px;border-bottom:1px solid #e5e7eb;">Move</th>
                                    <th style="text-align:left;padding:10px;border-bottom:1px solid #e5e7eb;">Type</th>
                                    <th style="text-align:right;padding:10px;border-bottom:1px solid #e5e7eb;">Level</th>
                                    <th style="text-align:left;padding:10px;border-bottom:1px solid #e5e7eb;">Method</th>
                                    <th style="text-align:left;padding:10px;border-bottom:1px solid #e5e7eb;">Game</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var row in Model.Moves.Where(m => string.Equals(m.VersionGroup, g, System.StringComparison.OrdinalIgnoreCase)))
                                {
                                    var levelDisplay = string.Equals(row.Method, "level-up", System.StringComparison.OrdinalIgnoreCase)
                                    ? (row.Level > 0 ? row.Level.ToString() : "—")
                                    : "—";

                                    <tr>
                                        <td style="padding:10px;border-bottom:1px solid #f0f2f5;text-transform:capitalize;">
                                            @row.MoveName
                                        </td>

                                        @* === REPLACED TYPE CELL WITH REQUESTED SNIPPET (includes graceful fallback chip) === *@
                                        @{
                                            var moveType = row?.MoveType;
                                            var typeLower = (moveType ?? "").ToLowerInvariant();
                                        }
                                        <td style="padding:10px;border-bottom:1px solid #f0f2f5;">
                                            @if (!string.IsNullOrWhiteSpace(moveType))
                                            {
                                                var href = Url.Action("Details", "Types", new { name = moveType, returnUrl = Url.Action("Details", "Pokedex", new { id = Model.Id }) });

                                                <a href="@href"
                                                   class="pokemon-type type-@typeLower type-chip"
                                                   style="display:inline-block;padding:4px 10px;border-radius:999px;font-weight:700;text-transform:capitalize;text-decoration:none;"
                                                   title="View @moveType type details">
                                                    @moveType
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="pokemon-type"
                                                      style="display:inline-block;padding:4px 10px;border-radius:999px;font-weight:700;background:#e5e7eb;color:#374151;">
                                                    —
                                                </span>
                                            }
                                        </td>

                                        <td style="padding:10px;border-bottom:1px solid #f0f2f5;text-align:right;">
                                            @levelDisplay
                                        </td>
                                        <td style="padding:10px;border-bottom:1px solid #f0f2f5;">
                                            <span style="display:inline-block;padding:2px 8px;border-radius:999px;background:#eef;">
                                                @Pretty(row.Method)
                                            </span>
                                        </td>
                                        <td style="padding:10px;border-bottom:1px solid #f0f2f5;text-transform:capitalize;">
                                            @PrettyGame(row.VersionGroup)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        }
    </section>

    <section style="margin-top:24px;">
        <h2>Pokédex Entries</h2>
        @if ((Model.PokedexEntries?.Count ?? 0) > 0)
        {
            <div style="display:flex;flex-direction:column;gap:8px;">
                @foreach (var entry in Model.PokedexEntries)
                {
                    <div style="background:#f7f7f7;border:1px solid #e5e5e5;border-radius:8px;padding:10px;">
                        <strong style="text-transform:capitalize;">@entry.Version</strong>: @entry.Text
                    </div>
                }
            </div>
        }
        else
        {
            <div><em>No Pokédex entries found.</em></div>
        }
    </section>
</div>

<style>
